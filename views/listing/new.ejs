<%- layout("layouts/boilerplate") %>
<body>
  <div class="container col-8 offset-2">
    <div class="row">
      <form
        action="/listing"
        method="POST"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <h2 class="mb-2 text-center">Creating a new listing</h2>
        <div class="mb-2">
          <label class="form-lable" for="title">Title</label>
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Enter title"
            required
          />
          <div class="invalid-feedback">Enter valid title</div>
        </div>
        <div class="mb-2">
          <label class="form-lable" for="description">Description</label>
          <textarea
            type="text"
            name="description"
            class="form-control"
            placeholder="Enter description"
            required
          ></textarea>
          <div class="invalid-feedback">Enter short description</div>
        </div>
        <div class="mb-2">
          <label class="form-lable" for="image">Upload Image</label>
          <input type="file" name="image" class="form-control" required />
        </div>
        <div class="row">
          <div class="col-md-4 mb-2">
            <label class="form-lable" for="price">Price</label>
            <input
              name="price"
              class="form-control"
              placeholder="Enter price"
              required
            />
            <div class="invalid-feedback">Enter valid price</div>
          </div>
          <div class="col-md-8 mb-2">
            <label class="form-lable" for="location">Location</label>
            <input
              type="text"
              name="location"
              class="form-control"
              placeholder="Enter location"
              required
            />
            <div class="invalid-feedback">Enter valid location</div>
          </div>
        </div>
        <div class="mb-2">
          <label class="form-lable" for="country">Country</label>
          <input
            type="text"
            name="country"
            class="form-control"
            placeholder="Enter country"
            required
          />
          <div class="invalid-feedback">Enter valid country</div>
        </div>
        <button class="btn btn-primary mb-2">Add</button>
      </form>
    </div>
  </div>
</body>
