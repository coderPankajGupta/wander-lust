<div class="row justify-content-center">
  <div class="w-100 d-flex justify-content-center">
    <% if (success && success.length) { %>
    <p
      class="text-center alert alert-success alert-dismissible fade show col-6 col-md-6"
    >
      <%= success %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </p>
    <%} %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="w-100 d-flex justify-content-center">
    <% if (error && error.length) { %>
    <p
      class="text-center alert alert-danger alert-dismissible fade show col-6 col-md-6"
    >
      <%= error %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </p>
    <%} %>
  </div>
</div>
